@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@(Html.Kendo().Grid<BookingManagement.Models.ViewModels.AttendeeViewModel>()
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(a => a.AttendeeID);
        columns.Bound(a => a.Name);
        columns.Bound(a => a.Email);
        columns.Bound(a => a.Color);
        columns.Command(command => command.Destroy());
    })
    .ToolBar(toolbar =>
    {
        toolbar.Create();
        toolbar.Save();
    })
    .Editable(edit => edit.Mode(GridEditMode.InCell))
    .Pageable()
    .Navigatable()
    .Sortable()
    .Scrollable()
    .DataSource(soure => soure
        .Ajax()
        .Batch(true)
        .PageSize(20)
        .ServerOperation(false)
        .Events(events => events.Error("errorHandler"))
        .Model(model=>
        {
            model.Id(a => a.AttendeeID);
            model.Field(a => a.AttendeeID).Editable(false);            
        })
        .Read(read => read.Action("Read_Attendees", "Attendees"))
        .Create(create => create.Action("Create_Attendees", "Attendees"))
        .Update(update => update.Action("Update_Attendees", "Attendees"))
        .Destroy(destroy => destroy.Action("Destroy_Attendees", "Attendees"))
    )
)

<script>
    function errorHandler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            alert(message);
        }
    }
</script>